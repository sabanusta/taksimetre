package Ders01;

import java.util.Scanner;

public class taksimetre {
    public static void main(String[] args) {

        double gidilenMesafe, toplamUcret ;
        int acilisUcreti= 10;
        double kmucreti=2.20;


        Scanner scan = new Scanner(System.in);
        System.out.println("GİDİLEN MESAFEYİ GİRİNİZ");
        gidilenMesafe= scan.nextInt();
        toplamUcret= acilisUcreti+(gidilenMesafe*kmucreti);

         toplamUcret= (toplamUcret <20) ? 20 : toplamUcret;

        System.out.println(toplamUcret);



    }
}
